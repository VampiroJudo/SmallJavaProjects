
public class SwitchClass {

	public static void main(String[] args) {
		String loanType = "Commercial";
		double interestRate;
		
		switch(loanType) {
		
		case "Residential":
			interestRate = 0.055;
			break;
		case "Commercial":
			interestRate = 0.062;
			break;
		case "Investment":
			interestRate = 0.059;
			break;
		default:
			interestRate = 0;
		}
		System.out.println(loanType + " loans have an annual interest rate of " + interestRate * 100 + "%.");
	}
	
	public static void mainTwo(String[] args) {

	int month = 4; //here 4 represents April
	
	boolean leapYear = false;
	
	int lastDay;
	switch (month) {
	case 1:
	case 3:
	case 5:
	case 7:
	case 8:
	case 10:
	case 12:
		lastDay = 31; 
		break;
	case 2:
		if (leapYear == true) {
			lastDay = 29;
		} else {
			lastDay = 28;
		} 
		break;
	case 4:
	case 6:
	case 9:
	case 11:
		lastDay = 30;
		break;
	default: lastDay = 0;
	}
}
}


